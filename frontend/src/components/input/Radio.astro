---
const { label, name, options, required = true } = Astro.props;
---

<fieldset>
	<legend>{label}</legend>
	{
		options.map(option => (
			<div class="radio-option">
				<input type="radio" id={`${name}-${option}`} name={name} value={option} required={required} />
				<label for={`${name}-${option}`}>{option}</label>
			</div>
		))
	}
</fieldset>

<style>
	fieldset {
		border: none;
		padding: 0;
		margin: 0;
	}
	legend {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: bold;
	}
	.radio-option {
		display: flex;
		align-items: center;
		margin-bottom: 0.5rem;
	}
	input[type="radio"] {
		margin-right: 0.5rem;
	}
	label {
		cursor: pointer;
	}
</style>
