---
import Layout from "@layouts/Layout.astro";
import AdminNav from "@components/AdminNav.astro";
import * as i18n from "src/i18n";
import "src/styles/admin.css";
const lang = i18n.local(Astro.url.pathname);
const t = i18n.t(lang, {
	title: {
		"zh-Hant": "管理後台",
		"zh-Hans": "管理后台",
		en: "Admin Dashboard"
	},
	ticketPageTitle: {
		"zh-Hant": "票種管理",
		"zh-Hans": "票种管理",
		en: "Ticket Types"
	},
	ticketTypes: {
		"zh-Hant": "票種",
