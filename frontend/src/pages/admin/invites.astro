		</section>
		<section class="types-wrapper">
			<div id="loading" class="loading">{t.loading}</div>
			<table id="typesTable" hidden class="types-table admin-table">
				<thead>
					<tr>
						<th>{t.name}</th>
						<th>{t.total}</th>
						<th>{t.used}</th>
						<th>{t.remaining}</th>
						<th>{t.created}</th>
